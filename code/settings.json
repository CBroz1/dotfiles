    // TERMINAL & FILES
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.fontSize": 16,
    "files.associations": {
        "*m": "matlab",
        "*/.env": "bash",
        ".env": "shellscript"
    },
    "files.exclude": {
        "**/.git/": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.D*": true, //ds store
        // "**/.vscode": true,
        "**/__pycache__*": true,
        "**/.ipynb_checkpoints": true,
        "**/.pytest_cache": true,
        "**/.coverage*": true,
        "**/*egg-info": true,
        "**/build": true,
        "node_modules/": true
    },
    "files.trimTrailingWhitespace": false,
    // MATLAB & OTHERs
    "matlab.mlintpath": "/Applications/MATLAB_R2022a.app/bin/maci64/mlint",
    "matlab.linterConfig": "/Applications/MATLAB_R2022a.app/bin/maci64/MLintSettings.txt",
    "[MATLAB]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "AffenWiesel.matlab-formatter"
    },
    "[HTML]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "prettier.documentSelectors": ["**/*.HTML"],
    "html.format.contentUnformatted": "",
    "[html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // MARKDOWN
